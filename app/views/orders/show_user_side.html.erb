<section class="shop-cart spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="shop__cart__table">
          <table>
            <thead>
              <tr>
                <th>Order ID</th>
                <th>Total Price</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td class="cart__product__item">
                    <%= link_to "Order ##{order.id}", show_user_side_orders_path(order), class: "cart-image" %>
                  </td>
                  <td class="cart__price">$ <%= order.discounted_total %></td>
                  <td class="cart__close">
                    <span class="icon_close">
                      <!-- Add any actions you want for the order, such as cancelling or viewing details -->
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="cart__btn">
          <a href="#">Continue Shopping</a>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="cart__btn update__btn">
          <a href="#"><span class="icon_loading"></span> Update orders</a>
        </div>
      </div>
    </div>
  </div>
</section>
