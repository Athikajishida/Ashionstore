<!-- app/views/orders/view_orders_and_return_items.html.erb -->

<h1>Your Orders</h1>

<% @orders.each do |order| %>
  <div class="order">
    <h2>Order ##{order.id}</h2>
    <p>Status: <%= order.status %></p>
    <p>Total: <%= number_to_currency(calculate_grand_total(order.order_items)) %></p>
    <ul>
      <% order.order_items.each do |item| %>
        <li><%= item.product.name %> - <%= item.quantity %> x <%= number_to_currency(item.unit_price) %></li>
      <% end %>
    </ul>
    <%= link_to "Return Items", return_items_order_path(order), method: :post, data: { confirm: 'Are you sure you want to return items?' } %>
  </div>
<% end %>
