<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="<%= root_path %>"><i class="fa fa-home"></i> Home</a>
                    <% if @products.present? %>
                        <% @products.each do |product| %>
                            <a href="#"><%= product.category_name %></a>
                            <span><%= product.name %></span>
                        <% end %>
                    <% else %>
                        <p>No products found.</p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <% if @products.present? %>
                    <% @products.each do |product| %>
                        <div class="product__details__pic">
                            <!-- Product images and slider here -->
                        </div>
                    <% end %>
                <% end %>
            </div>
            <div class="col-lg-6">
                <% if @products.present? %>
                    <% @products.each do |product| %>
                        <div class="product__details__text">
                            <!-- Product details like name, price, description, etc. here -->
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->
