<div class="content_body" id="content_body">
    <div class="wrapper_content_body">
        <h4>New Category</h4>
        <div class="content_box_border">
                <div class="row mt-2">
                <div class="table_overflow">
          <table  class="tablenormal">
            <thead>
              <tr>
                <th class="sort_table_row">Name</th>
                <th class="sort_table_row">Description</th>
              </tr>
            </thead>
            <tbody>
<%= render @category, show_link: false %>
              <tr>
              </tr>
            </tbody>
          </table>
        </div>
                    <div class="col-12 text-center row rmr">
                          <div class="col-lg-2 col-xs-12 col-sm-4">
                            <%= link_to "Edit", edit_category_path(@category), class: "btn btn-warning" %>
                          </div>
                          <div class="col-lg-2 col-xs-12 col-sm-4">
                            <%= link_to "Back", categories_path, class: "btn btn-success" %>
                          </div>
                          <div class="col-lg-2 col-xs-12 col-sm-4">
                            <%= button_to "Destroy", @category, method: :delete, class: "btn btn-danger" %>
                          </div>
                        </div>

                </div>
         </div>
    </div>
</div>
