<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="assets/css/media.css">
  </head>
  <body>
    <div class="header_admin">
      <a class="header_heading">
      <span>Control</span> Panel
      </a>
      <nav class="head_nav">
        <a href="javascript:;">
        <i id="asidebard_btn" class="fa-solid fa-bars"></i>
        </a>
        <ul>
          <li class="removeres">HELLO, <%= current_user.name %></li>
          </li>
          <li><i class="fa-solid fa-laptop"></i> ADMIN</li>
          <li><%= button_to "LOG OUT", destroy_user_session_path, method: :delete, class: "fa-solid fa-right-from-bracket", remote: true %></li>
        </ul>
      </nav>
    </div>
    <div id="content_body_hc" class="content_body_hc">
      <%= render partial: "layouts/admin_sidebar" %>
      <%= yield %>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/6f707f910a.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="plugin/table/datatables.css">
    <script type="text/javascript" charset="utf8" src="plugin/table/datatables.js"></script>
    <script>
      $(document).ready(function () {
          $("#imagepopup").click(function () {
          })
          $("#upload_image_tab").show();
          $(".tab_file_upload").click(function () {
              var showitem = $(this).attr("data-widget");
              $(".tab_file_upload").removeClass("active_media_tab")
              $(this).addClass("active_media_tab")
              $(".imgae_upload_tab_popup").hide();
              $(".upload_imga_center").hide();
              $("#" + showitem).show();
          })
      })
    </script>
    <script src="assets/script/script.js"></script>    
    <script src="custom/user.js"></script>
  </body>
</html>