<div class="content_body" id="content_body">
  <div class="wrapper_content_body">
    <h2>Product</h2>
    <div class="content_box_border">
      <div class="row mt-2">
        <div class="col-md-6">
          <div class="form_group">
            <strong>Name:</strong> <%= @product.name %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form_group">
            <strong>Description:</strong> <%= @product.description %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form_group">
            <strong>Category:</strong> <%= @product.category.category_name %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form_group">
            <strong>Subcategory:</strong> <%= @product.subcategory.name %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form_group">
            <strong>Size:</strong> <%= @product.size.size %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form_group">
            <strong>Color:</strong> <%= @product.color.name %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form_group">
            <strong>Image:</strong>
            <% if @product.image.attached? %>
              <%= image_tag @product.image, class: "img-fluid" %>
            <% else %>
              No image available
            <% end %>
          </div>
        </div>

        <div class="col-12 text-center">
          <%= link_to products_path, class: "form_btn btn_warning text-decoration-none" do %> Back <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
